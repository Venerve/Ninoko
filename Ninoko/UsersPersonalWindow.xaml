<Window x:Class="Ninoko.UsersPersonalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ninoko"
        mc:Ignorable="d"
        Title="UsersPersonalWindow" Height="450" Width="800"
        AllowsTransparency="True" Background="Transparent"
        WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Border CornerRadius="15" Grid.RowSpan="2">
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="CornflowerBlue" Offset="0.0"/>
                    <GradientStop Color="Plum" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <TabControl>
            <!--1st lang English-->
            <TabItem  Width="170" HorizontalContentAlignment="Center"  Name="English">
                <TabItem.Header>
                    <StackPanel Width="70">
                        <Border CornerRadius="20" Grid.RowSpan="5">
                            <Border.Background>
                                <LinearGradientBrush>
                                    <GradientStop Color="CornflowerBlue" Offset="0.0"/>
                                    <GradientStop Color="Plum" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="  English" Width="50" Height="20" />
                        </Border>
                    </StackPanel>
                </TabItem.Header>
                <Grid Width="800">
                    <!--Design-->
                    <Border CornerRadius="15" Grid.ColumnSpan="2">
                        <Border.Background>
                            <LinearGradientBrush>
                                <GradientStop Color="CornflowerBlue" Offset="0.0"/>
                                <GradientStop Color="Plum" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <!--Buttons-->

                </Grid>
            </TabItem>
            <!--2nd lang Japanese-->
            <TabItem   Width="170" HorizontalContentAlignment="Center"  Name="Japanese">
                <TabItem.Header>
                    <StackPanel Width="70">
                        <Border CornerRadius="20" Grid.RowSpan="5">
                            <Border.Background>
                                <LinearGradientBrush>
                                    <GradientStop Color="CornflowerBlue" Offset="0.0"/>
                                    <GradientStop Color="Plum" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="Japanese" Width="50" Height="20" />
                        </Border>
                    </StackPanel>
                </TabItem.Header>
                <Grid Width="800">
                    <!--Design-->
                    <Border CornerRadius="15" Grid.RowSpan="2">
                        <Border.Background>
                            <LinearGradientBrush>
                                <GradientStop Color="CornflowerBlue" Offset="0.0"/>
                                <GradientStop Color="Plum" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <!--Buttons-->

                </Grid>
            </TabItem>
            <!--3rd lang Spanish-->
            <TabItem Width="170" HorizontalContentAlignment="Center"  Name="Spanish">
                <TabItem.Header>
                    <StackPanel Width="70">
                        <Border CornerRadius="20" Grid.RowSpan="5">
                            <Border.Background>
                                <LinearGradientBrush>
                                    <GradientStop Color="CornflowerBlue" Offset="0.0"/>
                                    <GradientStop Color="Plum" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text=" Spanish" Width="50" Height="20" />
                        </Border>
                    </StackPanel>
                </TabItem.Header>
                <Grid Width="800">
                    <!--Design-->
                    <Border CornerRadius="15" Grid.RowSpan="2">
                        <Border.Background>
                            <LinearGradientBrush>
                                <GradientStop Color="CornflowerBlue" Offset="0.0"/>
                                <GradientStop Color="Plum" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <!--Buttons-->

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
